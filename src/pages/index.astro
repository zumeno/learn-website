---
import Layout from '../layouts/Layout.astro';
import Banner from '../components/Banner.astro';
import '../styles/index.css';

const features = [
  {
    title: "AI-Powered Learning",
    description: "Adaptive lessons that adjust to your learning style and pace",
    icon: "üß†"
  },
  {
    title: "Interactive Courses",
    description: "Hands-on projects and real-world applications",
    icon: "üñ•Ô∏è"
  },
  {
    title: "Personalized Tutor",
    description: "24/7 AI tutor that answers your questions instantly",
    icon: "ü§ñ"
  },
  {
    title: "Progress Tracking",
    description: "Visual dashboards to monitor your learning journey",
    icon: "üìä"
  }
];

const courses = [
  {
    title: "Machine Learning Fundamentals",
    description: "Learn core concepts with Python",
    category: "AI"
  },
  {
    title: "Neural Networks Explained",
    description: "From perceptrons to deep learning",
    category: "Advanced"
  },
  {
    title: "Data Science Basics",
    description: "Pandas, NumPy and visualization",
    category: "Beginner"
  },
  {
    title: "Natural Language Processing",
    description: "Build your first chatbot",
    category: "Intermediate"
  }
];
---
<Layout title="Zumeno Learn - AI-Powered Learning Platform">
  <Banner />
  <section class="hero-banner">
    <div class="hero-content">
      <h1>Learn Smarter with AI</h1>
      <p class="subtitle">Zumeno Learn adapts to your unique learning style, helping you master complex topics faster than ever.</p>
      <div class="cta-buttons">
        <a href="/signup" class="btn-primary btn-large">Start Learning Free</a>
        <a href="/demo" class="btn-outline btn-large">See How It Works</a>
      </div>
    </div>
    <div class="hero-image demo-preview">
      <img src="/learn-demo-screenshot.png" alt="Zumeno Learn interface preview" />
    </div>
  </section>

  <section id="features" class="features-section">
    <h2>Why Learn with AI?</h2>
    <div class="features-grid">
      {features.map((feature) => (
        <div class="feature-card gradient-bg">
          <div class="feature-icon">{feature.icon}</div>
          <h3>{feature.title}</h3>
          <p>{feature.description}</p>
        </div>
      ))}
    </div>
  </section>

  <section id="courses" class="popular-courses-section">
    <h2>Popular Courses</h2>
    <div class="courses-grid">
      {courses.map((course) => (
        <div class="course-card gradient-bg">
          <img src={`/courses/${course.title.toLowerCase().replace(/\s+/g, '-')}.jpg`} 
               alt={course.title} 
               class="course-image" />
          <h3>{course.title}</h3>
          <p>{course.description}</p>
          <span class="category-badge">{course.category}</span>
        </div>
      ))}
    </div>
  </section>

  <section class="cta-section gradient-bg">
    <h2>Ready to Transform Your Learning?</h2>
    <p>Join thousands accelerating their education with AI assistance.</p>
    <br><br>
    <a href="/signup" class="btn-primary btn-large">Start Free Today</a>
  </section>

  <footer class="footer gradient-bg">
    <div class="logo-container">
      <img src="/favicon.png" alt="Zumeno Logo" class="logo" />
      <span class="logo-text">Zumeno Learn</span>
    </div>

    <div class="footer-links">
      <a href="/privacy" class="btn-outline">Privacy</a>
      <a href="/terms" class="btn-outline">Terms</a>
      <a href="/contact" class="btn-outline">Contact</a>
    </div>

    <p class="copyright">
      ¬© <script>document.write(new Date().getFullYear())</script> Zumeno. Part of the Zumeno AI family.
    </p>
  </footer>
</Layout>
