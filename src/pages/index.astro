---
import Layout from '../layouts/Layout.astro';
import Banner from '../components/LandingBanner.astro';
import '../styles/index.css';

const features = [
  {
    title: "Smart Flashcard Generation",
    description: "Automatically convert documents/PDFs into optimized flashcards",
    icon: "üß†"
  },
  {
    title: "Instant Knowledge Answers",
    description: "Get clear, accurate explanations for any concept you're learning",
    icon: "üñ•Ô∏è"
  },
  {
    title: "AI-Powered Spaced Repetition",
    description: "Our algorithm shows you flashcards at the perfect time for maximum retention",
    icon: "ü§ñ"
  },
];
---
<Layout title="Zumeno Learn">
  <Banner />
  <section class="hero-banner">
    <div class="hero-content">
      <h1>Transform How You Learn with AI</h1>
      <p class="subtitle">Turn study materials into smart flashcards and get instant answers - our AI helps you learn faster and remember longer</p>
      <div class="cta-buttons">
        <a href="/signup" class="btn-primary btn-large">Get Started Free</a>
        <a href="/demo" class="btn-outline btn-large">See Live Demo</a>
      </div>
    </div>
    <div class="hero-image demo-preview">
      <img src="/learn-demo-screenshot.png" alt="Zumeno Learn interface preview showing flashcard creation" />
    </div>
  </section>

  <section id="features" class="features-section">
    <h2>Supercharge Your Study Sessions</h2>
    <div class="features-grid">
      {features.map((feature) => (
        <div class="feature-card gradient-bg">
          <div class="feature-icon">{feature.icon}</div>
          <h3>{feature.title}</h3>
          <p>{feature.description}</p>
        </div>
      ))}
    </div>
  </section>

  <section class="cta-section gradient-bg">
    <h2>Join the Future of Learning Today</h2>
    <p>Thousands of students and professionals are already accelerating their learning with Zumeno</p>
    <br><br>
    <a href="/signup" class="btn-primary btn-large">Start Your Free Trial Now</a>
  </section>

  <footer class="footer gradient-bg">
    <div class="logo-container">
      <img src="/favicon.png" alt="Zumeno Logo" class="logo" />
      <span class="logo-text">Zumeno Learn</span>
    </div>

    <div class="footer-links">
      <a href="/privacy" class="btn-outline">Privacy Policy</a>
      <a href="/terms" class="btn-outline">Terms of Service</a>
      <a href="/contact" class="btn-outline">Contact Support</a>
    </div>

    <p class="copyright">
      ¬© <script>document.write(new Date().getFullYear())</script> Zumeno. All rights reserved.
    </p>
  </footer>
</Layout>
